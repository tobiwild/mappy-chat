{
    "jabber": {
        "client": {
            "jid": "anemone@localhost",
            "password": "bibo"
        },
        "rooms": [
            "room1@conference.localhost",
            "room2@conference.localhost"
        ],
        "roomAlias": "Mappy"
    },
    "rules": [
        {
            "conditions": {
                "text": {
                    "regex": "^list$",
                    "modifier": "i"
                }
            },
            "message": {
                "command": "list_audio_files"
            }
        },
        {
            "conditions": {
                "text": {
                    "regex": "^killall$",
                    "modifier": "i"
                }
            },
            "message": {
                "command": "kill_processes"
            }
        },
        {
            "conditions": {
                "text": {
                    "regex": "^play (.+)",
                    "modifier": "i"
                }
            },
            "message": {
                "command": "play_audio_file",
                "file": "{text1}"
            }
        },
        {
            "conditions": {
                "text": {
                    "regex":"^!([a-z]{2}) (.*)",
                    "modifier":""
                }
            },
            "message": {
                "command": "text_to_speech",
                "text": "{user} sagt: {text2}",
                "language": "{text1}",
                "speed":"1.0",
                "tempo":"1.0",
                "pitch":"0"
            }
        }
    ]
}
